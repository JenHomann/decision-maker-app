<%= form_for(@vote, method: :post, url: create_vote_path(@contact.encrypted_id)) do |f| %>
  <% if @vote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vote.errors.count, "error") %> prohibited this vote from being saved:</h2>

      <ul>
      <% @vote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% @options.each do |option| %>
    <p><%= link_to(option.name, option.url) %></p>
    <p><%= image_tag(option.image) %></br>
    <%= f.check_box(:response, {value: option.name}, "yes", "no")%> <-- check for yes</p>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>